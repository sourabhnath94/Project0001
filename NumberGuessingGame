import java.util.Random;
import java.util.Scanner;

public class NumberGuessingGame {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Random random = new Random();

        int randomNumber = random.nextInt(100) + 1;  // Correct answer generated
        int guess;

        System.out.println("ðŸŽ¯ Number Guessing Game!");
        System.out.println("Guess a number between 1 and 100.");
        System.out.println("You have unlimited chances. Keep trying!");
        System.out.println("-------------------------------------------");

        while (true) { // Infinite loop until correct answer
            System.out.print("Enter your guess: ");
            guess = sc.nextInt();

            if (guess == randomNumber) {
                System.out.println("âœ… Correct Answer! You guessed it right.");
                break; // End game
            } else {
                System.out.println("âŒ Wrong Answer!");
                if (guess > randomNumber) {
                    System.out.println("Hint: Your guess is TOO HIGH.\n");
                } else {
                    System.out.println("Hint: Your guess is TOO LOW.\n");
                }
            }
        }

        sc.close();
    }
}